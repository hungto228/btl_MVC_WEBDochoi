@model IEnumerable<Web_enti_mvc.Models.SanPham>
@{
    Layout = "~/Views/Shared/_LayoutView.cshtml";

}

<div class="container">
    <div id="new-product"></div>
    <div id="most-view"></div>
</div>

<style>

    .cimg {
        /*   -webkit-transform :3s;
        transition: transform 3s;*/
    }

        .cimg:hover {
            transform: scale(1.08);
            box-shadow: 0px 2px 10px 4px #e4e7ec
            /*   //   -webkit-transform: rotatez(360deg);*/
        }
</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div style="height:1150px; ">
        <div class="row">
            <div class="col-lg-12" style="height:300px; border:1px solid solid; ">


                <img src="~/Assets/data/img1.png" style="width:100%; height:100%" />


            </div>

        </div>

        <div class="row" style="margin-bottom:40px">

            <div class="col-lg-2 col-md-2">
                <img src="~/Assets/data/adssampleben.gif" class="img img-responsive" style="width:100%; height:100%" />
            </div>

            <div class="col-lg-8 col-md-8">
                <div class="row">
                    @using (@Html.BeginForm("Index", "HomeView"))
                    {
                        <div class="navbar-form ">
                            <div class="form-group">

                                <input type="text" class="form-control" placeholder="Nhập sản phẩm muốn" name="search" id="search">
                            </div>
                            <button type="submit" class="btn btn-success">Tìm kiếm</button>
                        </div>
                    }
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-4" style="height:200px;margin-top:50px">

                                <img class="img img-responsive cimg" src="~/Assets/data/@Url.Content(item.HinhSP)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                                <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center"> @Html.ActionLink(@item.TenSP, "Details", new { id = @item.MaSP })</h4>

                            </div>

                        }
                    }
                </div>
            </div>
            <div class="col-lg-2 col-md-2">
                <img src="~/Assets/data/LOB_val_600.gif" class="img img-responsive" style="width:100%; height:100%" />
            </div>
        </div>
    </div>


</body>
</html>


    


